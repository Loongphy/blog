---
import { formatDateV2 } from "../utils";
const { posts } = Astro.props;
posts.sort((a, b) => Date.parse(b.data.pubDate) - Date.parse(a.data.pubDate));
---

<ul>
  {
    posts.map((post) => {
      return (
        <li>
          <a href={"posts/" + post.slug} class="tag_post-content">
            <span class="tag-date">[{formatDateV2(post.data.pubDate)}]</span>
            {post.data.title}
          </a>
        </li>
      );
    })
  }
</ul>
