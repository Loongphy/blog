---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <a href="mailto:loongphy@outlook.com">📧 Email me</a>
          </div>

          <div class="item products">
            <div class="item-title">作品</div>
            <a href="https://bento.me/ddl" target="_blank">Bento</a>
            <a href="//github.com/Loongphy/blog" target="_blank">本站源码</a>
            <a href="https://running.loongphy.com" target="_blank">跑步记录</a>
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            <a href="https://twitter.com/scavenger869" target="_blank"
              >Twitter</a
            >
            <a href="https://github.com/loongphy" target="_blank">Github</a>
            <a href="https://t.me/loongphy" target="_blank">Telegram</a>
          </div>

          <div class="item acknowledgement">
            <div class="item-title">感谢</div>
            <a href="https://icons8.com" target="_blank">ICONS8</a>
          </div>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`${year}  ${SITE_NAME}`}
          Powered by
          <a href="//github.com/austin2035/astro-air-blog">astro-air-blog</a>
        </div>
      </div>
    </div>
  </div>
</div>
